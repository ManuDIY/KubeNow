#!/bin/bash

# Exit if a command exits with a non-zero status
set -e

host_cloud="$1"

# Set plugin and template dir names
if [ -n "$KN_PLUGIN_NAME" ]; then
  echo "Using plugin configuration: $KN_PLUGIN_NAME"
  template_dir="templates-$KN_PLUGIN_NAME"
else
  template_dir="templates"
fi

echo "Initializing $INIT_DIR deployment directory for cloud provider $host_cloud"

# Copy template files to init dir
cp "/opt/KubeNow/$template_dir/terraform.tfvars.$host_cloud"* "/KubeNow_root/"
cp "/opt/KubeNow/$template_dir/inventory"*"-template" "/KubeNow_root/"

# If there is only one config file - then rename template to terraform.tfvars
if [ -f "/KubeNow_root/$template_dir/terraform.tfvars.$host_cloud-template" ]; then
  mv "/KubeNow_root/$template_dir/terraform.tfvars.$host_cloud-template" "/KubeNow_root/terraform.tfvars"
fi

# Copy config, scripts and other files
cp -r "/opt/KubeNow/$host_cloud" "/KubeNow_root/"
cp -r "/opt/KubeNow/common" "/KubeNow_root/"
cp -r "/opt/KubeNow/bootstrap" "/KubeNow_root/"
cp -r "/opt/KubeNow/bin" "/KubeNow_root/"
cp -r "/opt/KubeNow/playbooks" "/KubeNow_root/"
cp "/opt/KubeNow/ansible.cfg" "/KubeNow_root/"

# Generate and write kubetoken in all config files
tokenID=$(openssl rand -hex 3)
tokenVal=$(openssl rand -hex 8)
token="$tokenID.$tokenVal"
sed -i "s/your-kubeadm-token/${token}/g" terraform.tfvars*

# Write provisioner in all config files
sed -i "s|provisioner-image-name-autogenerated|${KN_PROVISIONERS_IMG}|g" terraform.tfvars*

# Generate SSH keys
ssh-keygen -t rsa -N '' -f ssh_key
